		height:42;
		border-radius:50;
	}
	.img{
		width:80;
		height:80;
		background-color: #d8d8d8;
	}
	.name{
		margin-left:30;
		flex:1;
	}
	.active{
		background-color: #e64340;
		border-width:0;
	}
</style>

<script>
	require('weex-components');
	var api = require('../lib/api.js');
	module.exports = {
		data: {
			dir:'dist',
			resUrl:api.apiurl.resurl,
			bImg:'/images/back.png',
			navHeight:88,
			bgColor:'#58bf65',
			title:'添加群成员',
			color:'#fff',
			lSrc:'/images/back.png',
			rTitle:'确定',
			rows:[
				{img:'/images/r_7_80.png',name:'狗蛋儿',state:false},
				{img:'/images/r_3_80.png',name:'冯敏',state:false},
				{img:'/images/r_7_80.png',name:'abc',state:false},
				{img:'/images/r_7_80.png',name:'abc',state:true}
			],
			show:true
		},
		methods: {
			changeState: function (e) {
				this.rows[e.target.attr.index].state = !this.rows[e.target.attr.index].state;
			},
			delete: function (e) {
				if(this.rows[e.target.attr.index].state == true){
//					this.show = !this.show;
				}else{
					return;
				}
			},
			getBase:function() {
				var bundleUrl = this.$getConfig().bundleUrl;
				var nativeBase;
				var isAndroidAssets = bundleUrl.indexOf('file://assets/') >= 0;
				var isiOSAssets = bundleUrl.indexOf('file:///') >= 0 && bundleUrl.indexOf('WeexDemo.app') > 0;
				if (isAndroidAssets) {
				    nativeBase = 'file://assets/' + this.dir + '/';
				} else if (isiOSAssets) {
				    nativeBase = bundleUrl.substring(0, bundleUrl.lastIndexOf('/') + 1);
				} else {
				    var host = 'localhost:12580';
				    var matches = /\/\/([^\/]+?)\//.exec(this.$getConfig().bundleUrl);
				    if (matches && matches.length >= 2) {
					host = matches[1];
				    }
				    nativeBase = 'http://' + host + '/' + this.dir + '/';
				}
				var h5Base = './index.html?page=../' + this.dir + '/';
				// in Native
				var base = nativeBase;
				if (typeof window === 'object') {
				    // in Browser or WebView
				    base = h5Base;
				}
				return base;
			}
		},
		created: function() {
	      	this.$on('naviBar.leftItem.click',function(e){
	        	var navigator = require('@weex-module/navigator')
				var params = {
				  animated: 'true'
				};
				navigator.pop(params, function () {
				  // callback
				});
	      	});
	      	this.$on('naviBar.rightItem.click',function(e){
	        	var navigator = require('@weex-module/navigator');
				var nextUrl = this.getBase() + 'personal/member.js';
				navigator.push({'url':nextUrl, 'animated':'true'},null);
	      	});
    	}
	};
</script>