<template>
	<div class="wrapper">
		<wxc-navpage height={{navHeight}} background-color={{bgColor}} title={{title}} title-color={{color}}  left-item-src="{{resUrl+lSrc}}"  right-item-title={{rTitle}} right-item-color="#fff"></wxc-navpage>
		<div class="content">
			<scroller>
				<div class="box-wrapper" repeat="item in rows" if="show">
					<div class="circle-box">
						<div class="circle {{item.state ? 'active' : ''}}" onclick="changeState" index="{{$index}}"></div>
					</div>
					<div class="img">
						<image src="{{resUrl+item.img}}" style="width:80;height:80;" if="show"></image>
					</div>
					<div class="name">
						<text  style="font-size:36;color:#333;">{{item.name}}</text>
					</div>
				</div>
			</scroller>
		</div>
	</div>
</template>

<style>
	.wrapper{
		background-color:#f8f8f8;
		flex-direction: column;
	}
	.header{
		background-color:#58bf65;
		height:88;
		width:750;
		position:fixed;
		top:0;
		left:0;
		flex-direction: row;
	}
	.back{
		flex:0.2;
		height:88;
		justify-content:center;
		align-items:center;
	}
	.title{
		flex:1;
		justify-content: center;
		align-items: center;
		height:88;
	}
	.next{
		flex:0.2;
		justify-content: center;
		align-items:center;
	}
	.content{
		margin-top:112;
		width:750;
		height:auto;
	}
	.box-wrapper{
		width:750;
		height:120;
		background-color: #fff;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		border-bottom-width:1;
		border-bottom-color:#bbb;
	}
	.circle-box{
		margin-left:29;
		margin-right:29;
	}
	.circle{
		border-width:2;
		border-color:#d8d8d8;
